#Open Terminal and use Command: ./install_script
# !WARNING: Change the directorypaths to the ones you want to use
# sudo nano ~/.bashrc -> path to catkin_ws pr√ºfen

sudo apt-get update
sudo apt-get upgrade

# Commands especially for MiR200-withUR5
sudo apt-get install ros-melodic-moveit
Y
sudo apt-get install ros-melodic-moveit-visual-tools
Y

#!Edit the following path to your catkin_ws
cd ~/catkin_ws/src

#download realsense_gazebo_plugin (into src folder, lib has to be gebuilded. urdfs sind schon in Mur package)
git clone https://github.com/HartmannSa/realsense_gazebo_plugin.git


#Already in MuR205 Repo
git clone https://github.com/Heenne/MiR200-with-UR5.git
git clone https://github.com/ros-industrial/universal_robot
git clone -b melodic-devel https://github.com/pal-robotics/gazebo_ros_link_attacher.git
#Mir200_Sim Package needs to be installed as well (e.g. mir_gazebo is used)
git clone -b GazeboEdit https://github.com/HartmannSa/Mir200_Sim.git


#Missing dependencies
sudo rosdep init
rosdep update
rosdep install --from-paths src --ignore-src -r -y	

cd ..
catkin_make -j4

#Launch Command
roslaunch mir_ur5 system_sim.launch 

#Install GUI to control the UR
sudo apt-get install ros-melodic-rqt-joint-trajectory-controller

#Start GUI
rosrun rqt_joint_trajectory_controller rqt_joint_trajectory_controller
